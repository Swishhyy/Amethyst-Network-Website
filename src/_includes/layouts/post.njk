---
tags: post
layout: base.njk
---

<article class="blog-post">
    <header>
        <h1>{{ title }}</h1>
        <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
    
    <footer>
        <p>Posted in: 
        {%- for tag in tags -%}
            {%- if tag != "post" -%}
            <a href="/tags/{{ tag }}/">{{ tag }}</a>
            {%- if not loop.last %}, {% endif -%}
            {%- endif -%}
        {%- endfor -%}
        </p>
    </footer>
</article>
